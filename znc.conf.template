//
// But if you feel risky, you might want to read help on /znc saveconfig and /znc rehash.
// Also check http://en.znc.in/wiki/Configuration

Version = 1.6.3

<Listener irc>
	AllowIRC = true
	AllowWeb = false
	IPv4 = true
	IPv6 = true
	Port = __ZNC_PORT__
	SSL = true
</Listener>

<Listener web>
	AllowIRC = false
	AllowWeb = true
	IPv4 = true
	IPv6 = true
	Port = 8000
	SSL = false
</Listener>

LoadModule = webadmin

<User __user__>
	Pass       = sha256#__hash__#__salt__#
	Admin      = true
	Nick       = nick
	AltNick    = altnick
	Ident      = ident
	RealName   = realname
	LoadModule = chansaver
	LoadModule = controlpanel

	<Network freenode>
		LoadModule = simple_away
		Server     = chat.freenode.net +6697
		BindHost   = 0.0.0.0

		<Chan #cloudron>
		</Chan>
	</Network>

</User>
